#new-project-modal.reveal-modal
	%h3.header
		New Project
	=simple_form_for [current_user, @new_project] do |f|
		=f.input :user_id, :as => :hidden
		=f.input :name
		=f.input :x_name, hint: "This will be the name of your graph's x axis"
		=f.input :y_name, hint: "This will be the name of your graph's y axis"
		=f.input :description, :as => :text	
		=f.button :submit, class: "submit-new-project"